# Part A

for (days in 8:1)
{
	print(paste('There are', days, 'days left to Thanksgiving'))
}

#Or, combine for and if statements for grammatical correctness 
for (days in 8:1)
{
	if (days>1)
	{
		print(paste('There are', days, 'days left to Thanksgiving'))
	}
	if (days==1)
	{
		print(paste('There is', days, 'day left to Thanksgiving'))
	}
}


